<% include partials/header %>



<div class="ui grid" style="margin-top : 50px; ">
        <div class="four wide column"></div>
        <div class="eight wide column">
            <h1>Edit <%= blog.title %></h1>
        </div>
        <div class="four wide column"></div>
    
        <div class="four wide column"></div>
        
        <div class="eight wide column">
                <div class="container">
                        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
                                <div class="field">
                                  <label>Title</label>
                                  <input type="text" name="blog[title]" placeholder="Blog Title" value="<%= blog.title %>">
                                </div>
                                <div class="field">
                                  <label>Image</label>
                                  <input type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>">
                                </div>
                                <div class="field">
                                        <label>Content</label>
                                        <textarea name="blog[body]"><%= blog.body %></textarea>
                                      </div>
                                      <div class="ui buttons">
                                          
                                                <button class="ui button" type="button" onclick="window.location.href='/'">Back</button>
                                         
                                            
                                            <div class="or"></div>
                                            <button class="ui positive button" type="submit">Save</button>
                                          </div>
                        </form>
                </div>
        </div>
        <div class="four wide column"></div>
        
      </div>











<% include partials/footer %>